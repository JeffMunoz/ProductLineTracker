<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<!--Author: Jeff Munoz-->

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="productline.Controller">

  <TabPane prefHeight="437.0" prefWidth="567.0" tabClosingPolicy="UNAVAILABLE">

    <Tab text="Product Line">

      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">

        <Button layoutX="246.0" layoutY="149.0" mnemonicParsing="false"
          onAction="#handleButtonAction" styleClass="button" text="Add Product"/>
        <GridPane alignment="CENTER_LEFT" layoutX="36.0" layoutY="10.0" prefHeight="109.0"
          prefWidth="285.0">
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="149.0" minWidth="10.0"
              prefWidth="86.5999755859375"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="134.0" minWidth="10.0"
              prefWidth="74.4000244140625"/>
          </columnConstraints>
          <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          </rowConstraints>

          <Label prefHeight="11.0" prefWidth="94.0" text="Product Name"/>
          <Label text="Manufacturer " GridPane.rowIndex="1"/>
          <Label prefHeight="17.0" prefWidth="60.0" text="Item Type" GridPane.rowIndex="2"/>
          <TextField fx:id="prName" GridPane.columnIndex="1"/>
          <TextField fx:id="manufacturer" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
          <ChoiceBox fx:id="cbType" prefWidth="150.0" GridPane.columnIndex="1"
            GridPane.rowIndex="2"/>

        </GridPane>
        <TableView fx:id="currentProducts" layoutX="96.0" layoutY="290.0" prefHeight="97.0"
          prefWidth="376.0"/>
        <Label layoutX="96.0" layoutY="266.0" text="Existing Products"/>

      </AnchorPane>

    </Tab>
    <Tab text="Produce">

      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">

        <Button layoutX="231.0" layoutY="256.0" mnemonicParsing="false" onAction="#produceBtn"
          styleClass="button" text="Record Production"/>
        <Label layoutX="184.0" layoutY="20.0" text="Choose Product"/>
        <ListView layoutX="184.0" layoutY="47.0" prefHeight="103.0" prefWidth="200.0"/>
        <ComboBox fx:id="quantityCBox" editable="true" layoutX="209.0" layoutY="192.0"
          prefWidth="150.0"/>
        <Label layoutX="209.0" layoutY="163.0" text="Choose Quantity"/>

      </AnchorPane>

    </Tab>
    <Tab text="Production Log">

      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">

        <Button layoutX="248.0" layoutY="231.0" mnemonicParsing="false" onAction="#logBtn"
          styleClass="button" text="Hello there!"/>
        <TextArea fx:id="ta" layoutX="184.0" layoutY="14.0" prefHeight="200.0" prefWidth="200.0"
          promptText="TextArea"/>

      </AnchorPane>

    </Tab>
  </TabPane>

  <columnConstraints>
    <ColumnConstraints/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints/>
    <RowConstraints/>
    <RowConstraints/>
  </rowConstraints>

  <stylesheets>
    <URL value="@style.css"/>
  </stylesheets>
</GridPane>
